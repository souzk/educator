{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./source",
    "paths": {
      "models/*": ["models/*"],
      "controllers/*": ["controllers/*"],
      "middleware/*": ["middleware/*"],
      "routes/*": ["routes/*"]
    }
  },
  "include": ["source/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}